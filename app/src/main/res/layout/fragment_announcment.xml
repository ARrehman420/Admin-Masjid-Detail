<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewAnnouncmentsTab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/helvetica_neue_lt_com_65_medium"
        android:text="@string/announcementsfrag"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/daysTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/helvetica_neue_lt_com_65_medium"
        android:text="@string/days"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewAnnouncmentsTab" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/daysTextView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="327dp"
                android:layout_height="168dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/cornerradius"
                    android:padding="5dp"
                    android:src="@drawable/group"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="47dp"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/helvetica_neue_lt_com_65_medium"
                    android:text="@string/mosquename"
                    android:textColor="@color/black" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="47dp"
                    android:layout_marginTop="37dp"
                    android:fontFamily="@font/helvetica_neue_lt_com_65_medium"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/date" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="47dp"
                    android:layout_marginTop="68dp"
                    android:fontFamily="@font/helvetica_neue_lt_com_65_medium"
                    android:text="@string/announcement_title"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="47dp"
                    android:layout_marginTop="95dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginBottom="14dp"
                    android:fontFamily="@font/helvetica_neue_lt_com_65_medium"
                    android:text="@string/announcmentText"
                    android:textSize="14sp" />


            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>